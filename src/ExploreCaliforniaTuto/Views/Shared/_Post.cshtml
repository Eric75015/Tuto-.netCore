@inject ExploreCaliforniaTuto.Models.FormattingService Format
@model ExploreCaliforniaTuto.Models.Post

<article class="blog-post">
    <h1>@Model.Title</h1>
    <div class="details">
        <h1>
            @Html.ActionLink(Model.Title, "Post", "Blog", new { year = Model.Posted.Year, month = Model.Posted.Month, key = Model.Key })
        </h1>
        Posted <span>@Format.AsReadableDate(Model.Posted)</span> by <span>@Model.Author</span>
    </div>
    <div class="content">
        @Model.Body
    </div>
</article>